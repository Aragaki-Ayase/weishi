<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button

            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/white"
            android:background="@null"
            android:layout_width="45dp"
            android:layout_height="18dp" />
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@mipmap/logo"
        android:id="@+id/img_logo"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_width="85dp"
        android:layout_height="85dp"/>


    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <ImageView
            android:src="@mipmap/iphone"
            android:id="@+id/img_tel"
            android:layout_marginLeft="50dp"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <EditText
            android:id="@+id/et_username"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:hint="手机号"
            android:layout_marginRight="50dp"
            android:textColorHint="@color/white"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:layout_toRightOf="@id/img_tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <ImageView
            android:src="@mipmap/yanzhengma"
            android:id="@+id/img_sms"
            android:layout_marginLeft="50dp"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <EditText
            android:id="@+id/et_sms"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:hint="验证码"
            android:layout_marginRight="50dp"
            android:textColorHint="@color/white"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:layout_toRightOf="@id/img_sms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_yzm"
            android:layout_marginRight="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentRight="true"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_style"
            android:layout_width="80dp"
            android:layout_height="25dp"/>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <ImageView
            android:src="@mipmap/password"
            android:id="@+id/img_password"
            android:layout_marginLeft="50dp"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <EditText
            android:id="@+id/et_password"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:hint="输入密码"
            android:layout_marginRight="50dp"
            android:textColorHint="@color/white"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:layout_toRightOf="@id/img_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <ImageView
            android:src="@mipmap/password"
            android:id="@+id/img_password2"
            android:layout_marginLeft="50dp"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <EditText
            android:id="@+id/et_password2"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:hint="确认密码"
            android:layout_marginRight="50dp"
            android:textColorHint="@color/white"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:layout_toRightOf="@id/img_password2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:theme="@style/My_CheckBox"
            android:textSize="12dp"
            android:id="@+id/cb_confirm"
            android:text="注册即代表同意"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12dp"
            android:text="《用户使用手册》"
            android:textColor="@color/red"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

<Button
    android:id="@+id/btn_login"
    android:layout_marginTop="25dp"
    android:textSize="17dp"
    android:textColor="@color/white"
    android:text="注   册"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    android:background="@drawable/bg_button_style"
    android:layout_width="match_parent"
    android:layout_height="40dp" />


</LinearLayout>